<% if(locals.user) {%>
    <div class="container mt-4 col-md-4">
        <form method="POST" action="/shorten" class="mt-2 border border-dark rounded p-3"
            style="--bs-border-opacity: 0.5">
            <div class="mb-2">
                <label for="enterUrl" class="form-label">Enter URL</label>
                <input type="url" class="form-control" id="enterUrl" name="enterUrl" />
            </div>
            <button type="submit" class="btn btn-primary"><a>Short Link</a></button>    
        
        <% if (enteredUrl && generatedLink) { %>
            <div class="mt-3">
                
                <p>Entered URL: 
                    
                    <a href="<%= enteredUrl %>" target="_blank">
                        <%=enteredUrl.substring(0, 50) + " ..."%>
                    </a>
                </p>
                <p>Shorten URL: <a href="<%= generatedLink %>" target="_blank">
                        <%= generatedLink %>
                    </a></p>
            </div>
        <% } %>
    </form>

    </div>
    <%} %>